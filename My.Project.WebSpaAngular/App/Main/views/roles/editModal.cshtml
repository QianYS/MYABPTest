@{
    const string FormName = "roleCreateOrEditForm";
    string InputName = "";
}
<div id="mypup">
    <form name="@FormName" role="form" novalidate class="form-validation form-horizontal">
        <div class="modal-header box-header">
            <a class="close" ng-click="vm.cancel()"><i class="fa fa-close"></i></a>
            <h4 class="modal-title">
                <span>{{vm.title}}</span>
            </h4>
        </div>
        <div uib-tabset class="modal-body nav-tabs-custom">
            <uib-tab heading="基本信息">
                @{ InputName = "name"; }
                <div class="form-group" ng-class="{'has-error':@FormName.@InputName.$invalid}">
                    <label class="col-sm-2 control-label" for="@InputName">角色名</label>
                    <div class="col-sm-10">
                        <input class="form-control" name="@InputName" type="text"
                               required
                               maxlength="32"
                               ng-model="vm.role.@InputName">
                    </div>
                </div>
                @{ InputName = "displayName"; }
                <div class="form-group" ng-class="{'has-error':@FormName.@InputName.$invalid}">
                    <label class="col-sm-2 control-label" for="@InputName">DisplayName</label>
                    <div class="col-sm-10">
                        <input class="form-control" name="@InputName" type="text"
                               required
                               maxlength="32"
                               ng-model="vm.role.@InputName">
                    </div>
                </div>
                @{ InputName = "description"; }
                <div class="form-group" ng-class="{'has-error':@FormName.@InputName.$invalid}">
                    <label class="col-sm-2 control-label" for="@InputName">Roles Description</label>
                    <div class="col-sm-10">
                        <textarea name="Description" ng-model="vm.role.@InputName" class="validate form-control"></textarea>
                    </div>
                </div>
            </uib-tab>
            <uib-tab heading="权限">
                <permission-tree edit-data="vm.permissionEditData"></permission-tree>
            </uib-tab>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" ng-click="vm.cancel()">
                <i class="fa fa-close"></i> 取消
            </button>
            <button type="submit" class="btn btn-primary blue" ng-click="vm.save()" button-busy="vm.saving"
                    ng-disabled="@FormName.$invalid">
                <i class="fa fa-save"></i> 保存
            </button>
        </div>
    </form>
</div>